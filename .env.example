# Social Media Microservice Configuration

# Server Configuration
PORT=5000
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Social Media API Keys
# Twitter/X API Configuration
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Facebook API Configuration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# LinkedIn API Configuration
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Instagram API Configuration (requires Business account)
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# Optional: External Database (for production)
# DATABASE_URL=postgresql://username:password@host:port/database
# REDIS_URL=redis://localhost:6379

# Optional: External Cron Service for reliability
# EXTERNAL_CRON_URL=https://your-cron-service.com/webhook

# Monitoring and Notifications
# WEBHOOK_URL=https://your-webhook-endpoint.com/notifications
# SENTRY_DSN=your-sentry-dsn-for-error-tracking

# CORS Configuration
# CORS_ORIGIN=https://your-frontend-domain.com

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=15

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Analytics Configuration
ANALYTICS_COLLECTION_INTERVAL=3600000
